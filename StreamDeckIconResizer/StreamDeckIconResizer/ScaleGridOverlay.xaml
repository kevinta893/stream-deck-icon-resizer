<UserControl x:Class="StreamDeckIconResizer.ScaleGridOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamDeckIconResizer"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <Image x:Name="GridOverlay" HorizontalAlignment="Left" Height="{Binding ActualHeight}" Width="{Binding ActualWidth}" AllowDrop="True" Stretch="None"/>
    </Grid>
</UserControl>
