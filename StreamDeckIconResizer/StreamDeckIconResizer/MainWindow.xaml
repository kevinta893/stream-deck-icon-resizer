<Window x:Class="StreamDeckIconResizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamDeckIconResizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ResizeButton" Content="Resize!" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Height="80" Width="110" />
        <Slider x:Name="ImageScaleSlider" HorizontalAlignment="Left" Height="30" Margin="10,394,0,0" VerticalAlignment="Top" Width="320" Maximum="1000" Minimum="1" ValueChanged="IconScaleSlider_ValueChanged"/>
        <Label x:Name="CurrentFileLabel" Content="Drag and drop an image to start" HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" VerticalAlignment="Top" Width="325"/>
        <local:ImageResizerPreview x:Name="ResizeImage" HorizontalAlignment="Left" Height="320" Margin="10,59,0,0" VerticalAlignment="Top" Width="320" AllowDrop="True" Drop="ResizeImage_Drop" Background="#FFF0F0F0"/>
        <TextBlock x:Name="ResizePropertiesLabel" HorizontalAlignment="Center" Margin="0,59,0,0" Text="Scale: 100%" TextWrapping="Wrap" VerticalAlignment="Top" Height="65" Width="110" Background="#FFF1F1F1" Padding="5,5,5,0"/>

    </Grid>
</Window>
